#!/usr/bin/env node

process.env.DEBUG = process.env.DEBUG || 'app:*'
require('../lib/pretty-error')

const defaultCommand = 'dev'
const commands = new Set([
  defaultCommand,
  'build'
])

var cmd = process.argv[2]

if (commands.has(cmd)) {
  process.argv.splice(2, 1)
}
else {
  cmd = defaultCommand
}

require(require('path').join(__dirname, 'qapp-' + cmd))
